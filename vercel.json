{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.py"
    }
  ],
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9",
      "PIP_INDEX_URL": "https://pypi.org/simple"
    }
  },
  "installCommand": "python3.9 -m pip install --upgrade pip setuptools wheel && python3.9 -m pip install --no-cache-dir -r backend/requirements.txt"
}
