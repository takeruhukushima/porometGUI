{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.py"
    }
  ],
  "build": {
    "env": {
      "PYTHON_VERSION": "3.12",
      "PIP_INDEX_URL": "https://pypi.org/simple",
      "PIP_DEFAULT_TIMEOUT": "100"
    }
  },
  "installCommand": "python -m pip install --upgrade pip setuptools wheel && pip install --no-cache-dir -r backend/requirements.txt"
}
