{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.py"
    }
  ],
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9",
      "PIP_INDEX_URL": "https://pypi.org/simple",
      "PIP_PREFER_BINARY": "1",
      "NPM_CONFIG_PYTHON": "/usr/bin/python3"
    }
  },
  "installCommand": "pip install --upgrade pip setuptools wheel && pip install --no-deps --no-cache-dir -r backend/requirements.txt"
}
